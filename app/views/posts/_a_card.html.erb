      <h6 class="card-title font-weight-normal  text-dark">
        <%= card.relation1_description %>
      </h6>

      <% if card.relation1_when_to_use1.present? or card.relation1_when_to_use2.present? or card.relation1_when_to_use3.present? %>
        <hr class="my-4">
      <% end %>

      <% if card.relation1_when_to_use1.present? %>
        <h6 class="card-title whentouse font-weight-normal">
          <%=  t('show.ACard.R1_WhenToUseIt1', card_relation1_when_to_use1: card.relation1_when_to_use1 ) %>
        </h6>
      <% end %>
      <% if card.relation1_when_to_use2.present? %>
        <h6 class="card-title whentouse font-weight-normal">
          <%=  t('show.ACard.R1_WhenToUseIt2', card_relation1_when_to_use2: card.relation1_when_to_use2 ) %>
        </h6>
      <% end %>
      <% if card.relation1_when_to_use3.present? %>
        <h6 class="card-title whentouse font-weight-normal">
          <%=  t('show.ACard.R1_WhenToUseIt3', card_relation1_when_to_use3: card.relation1_when_to_use3 ) %>
        </h6>
      <% end %>
    </div>
  <% end %>

