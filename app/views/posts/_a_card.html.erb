<div class="card text-info mb-3 text_setting ">
  <div class="card-header h5 upper">
    <%= card.user.nickname %>
    <small class="text-secondary time_text">
      <%= card.created_at.strftime("%Y/%m/%d %H:%M") %>
    </small>
  </div>
  <div class="card-body text-secondary ">
    <h6 class="card-title font-weight-normal text-dark">
      <%= card.description %>
    </h6>

    <% if card.when_to_use1.present? or card.when_to_use2.present? or card.when_to_use3.present? or card.when_to_use4.present? or card.when_to_use5.present? %>
      <hr class="my-4">
    <% end %>

    <% if card.when_to_use1.present? %>
      <h6 class="card-title whentouse font-weight-normal ">
        <%=  t('show.ACard.WhenToUseIt1', card_when_to_use1: card.when_to_use1 ) %>
      </h6>
    <% end %>
    <% if card.when_to_use2.present? %>
      <h6 class="card-title whentouse font-weight-normal  ">
        <%=  t('show.ACard.WhenToUseIt2', card_when_to_use2: card.when_to_use2 ) %>
      </h6>
    <% end %>
    <% if card.when_to_use3.present? %>
      <h6 class="card-title whentouse font-weight-normal ">
        <%=  t('show.ACard.WhenToUseIt3', card_when_to_use3: card.when_to_use3 ) %>
      </h6>
    <% end %>
    <% if card.when_to_use4.present? %>
