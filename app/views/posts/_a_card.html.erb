</div>

<div class="comment_box">
  <%= render partial: 'comment', collection: card.comments, as: "comment" %>
</div>


<div class="text-right paddingleft">
  <div class="comment_area">
    <%= form_for @comment, url: post_comments_path(card.id), method: 'POST', html: {id: "new_comment_#{card.id}"}  do |f| %>   
      <%= f.text_field :text, class:"form-control width80", placeholder: "#{t('show.ACard.MakeSomeComment')}", id: "comment_text_#{card.id}"  %> 
      <%= button_tag type: 'submit', class: 'btn-info rounded comment-button' do %>
        <i class="fas fa-paper-plane "></i>
      <% end %>
    <% end %>
  </div>
</div>