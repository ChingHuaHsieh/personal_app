        <%=  t('show.ACard.WhenToUseIt4', card_when_to_use4: card.when_to_use4 ) %>
      </h6>
    <% end %>
    <% if card.when_to_use5.present? %>
      <h6 class="card-title whentouse font-weight-normal ">
        <%=  t('show.ACard.WhenToUseIt5', card_when_to_use5: card.when_to_use5 ) %>
      </h6>
    <% end %>
  </div>

  
    
